# Netlify Environment Variables Configuration
# Copy these variables to Netlify Dashboard → Site Settings → Environment Variables
# DO NOT commit actual values to Git

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from: Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# =============================================================================
# APPLICATION CONFIGURATION (Required)
# =============================================================================
NEXT_PUBLIC_APP_NAME=BeerHive POS
NEXT_PUBLIC_APP_URL=https://your-site-name.netlify.app
NODE_ENV=production

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
NEXT_PUBLIC_ENABLE_VIP_PACKAGES=true
NEXT_PUBLIC_ENABLE_LOYALTY_POINTS=false

# =============================================================================
# BUILD CONFIGURATION (Auto-set by Netlify)
# =============================================================================
# These are automatically set by Netlify - no need to manually configure
# NETLIFY=true
# CONTEXT=production
# DEPLOY_ID=xxxxx
# DEPLOY_PRIME_URL=https://xxxxx.netlify.app

# =============================================================================
# MONITORING (Optional - for production monitoring)
# =============================================================================
# Sentry for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# SENTRY_AUTH_TOKEN=xxxxx

# =============================================================================
# NOTES FOR DEPLOYMENT
# =============================================================================
# 1. Never commit actual values to version control
# 2. Set these in Netlify Dashboard, not in code
# 3. Use different values for preview/branch deploys if needed
# 4. Restart deployment after changing environment variables
# 5. Service role key should NEVER be exposed to client (no NEXT_PUBLIC_ prefix)
